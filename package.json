{
    "name": "microbe-core",
    "version": "1.0.0",
    "private": true,
    "license": "MIT",
    "scripts": {
        "clean": "lerna clean",
        "build": "babel src --out-dir dist",
        "publish": "lerna publish --skip-npm",
        "list": "lerna ls",
        "lint": "standard --verbose | snazzy",
        "fix": "standard --fix --verbose | snazzy",
        "test": "jest",
        "start": "babel-node ./src/index.js"
    },
    "standard": {
        "parser": "babel-eslint",
        "globals": [
            "test",
            "expect"
        ],
        "plugins": [
            "flowtype"
        ],
        "ignore": [
            "/dist/",
            "/packages/*/dist/"
        ]
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@taskr/babel": "^1.0.6",
        "@taskr/clear": "^1.0.6",
        "@taskr/esnext": "^1.0.0",
        "@taskr/watch": "^1.0.6",
        "babel-cli": "^6.24.1",
        "babel-core": "^6.25.0",
        "babel-eslint": "^7.2.3",
        "babel-jest": "^20.0.3",
        "babel-plugin-add-module-exports": "^0.2.1",
        "babel-plugin-module-resolver": "^2.7.1",
        "babel-plugin-syntax-class-properties": "^6.13.0",
        "babel-plugin-syntax-decorators": "^6.13.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-decorators-legacy": "^1.3.4",
        "babel-preset-env": "^1.6.0",
        "babel-preset-flow": "^6.23.0",
        "babel-preset-stage-0": "^6.24.1",
        "eslint-plugin-flowtype": "^2.35.0",
        "flow-bin": "^0.49.1",
        "glob": "^7.1.2",
        "jest-cli": "^20.0.4",
        "lerna": "^2.0.0-rc.5",
        "node-notifier": "^5.1.2",
        "snazzy": "^7.0.0",
        "standard": "^10.0.2",
        "taskr": "^1.0.6"
    },
    "dependencies": {
        "lodash": "^4.17.4"
    }
}
